        <id>BL_RebalanceNoSapperRaids</id>
        <category>BL_RebalanceCoreRaids</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//RaidStrategyDef[defName="ImmediateAttackSappers"]/selectionWeightPerPointsCurve/points</xpath>

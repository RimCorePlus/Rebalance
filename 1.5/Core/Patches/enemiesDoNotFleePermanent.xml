<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Permanent enemies do not flee</label>
        <tooltip>Pirate factions.</tooltip>
        <id>BL_RebalanceEnemiesDoNotFleePermanent</id>
        <category>BL_RebalanceCoreRaids</category>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//FactionDef[permanentEnemy="true" and not(autoFlee="false")]</xpath>
                <value>
                    <autoFlee>false</autoFlee>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
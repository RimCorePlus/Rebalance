<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Add ancient dangers to encounter maps</label>
        <id>BL_RebalanceAncientDangerEncounter</id>
        <category>BL_RebalanceCoreMapGen</category>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//MapGeneratorDef[defName="Encounter"]/genSteps</xpath>
                <value>
                    <li>ScatterShrines</li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
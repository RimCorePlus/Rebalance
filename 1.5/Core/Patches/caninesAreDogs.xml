<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Wild canines are dogs</label>
        <tooltip>Wargs and wolves produce the same amount of filth as dogs, and nuzzle like dogs.</tooltip>
        <id>BL_RebalanceCaninePets</id>
        <category>BL_RebalanceCoreAnimals</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/statBases/FilthRate/text()</xpath>
                <value>1</value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/race/petness/text()</xpath>
                <value>1</value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/race</xpath>
                <value>
                    <nuzzleMtbHours>12</nuzzleMtbHours>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
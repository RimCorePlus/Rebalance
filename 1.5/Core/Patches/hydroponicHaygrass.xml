<Patch>
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>false</defaultValue>
        <label>Allow haygrass in hydroponics basin</label>
		<id>BL_RebalanceHydroHaygrass</id>
		<category>BL_RebalanceCoreCheats</category>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[defName="Plant_Haygrass"]/plant/sowTags</xpath>
                <value>
                    <li>Hydroponic</li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
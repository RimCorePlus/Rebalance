<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Vanometric power cell is also a battery</label>
        <tooltip>In addition to providing power, the vanometric power cell also has a 1000Wd capacity with 100% efficiency.</tooltip>
        <id>BL_RebalanceVanometricBattery</id>
        <category>BL_RebalanceCoreCheats</category>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[defName="VanometricPowerCell"]/comps</xpath>
                <value>
                    <li Class="CompProperties_Battery">
                        <storedEnergyMax>1000</storedEnergyMax>
                        <efficiency>1</efficiency>
                        <transmitsPower>true</transmitsPower>
                    </li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
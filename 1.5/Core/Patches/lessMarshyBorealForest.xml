<Patch>
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>false</defaultValue>
		<label>Less marshy boreal forests</label>
		<tooltip>Reduces the marsh/water thresholds of boreal forests to match temperate forests.</tooltip>
		<id>BL_RebalanceLessMarshyBorealForest</id>
		<category>BL_RebalanceCoreMapGen</category>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//BiomeDef[defName="BorealForest"]/terrainPatchMakers</xpath>
				<value>
					<terrainPatchMakers>
						<li>
							<perlinFrequency>0.015</perlinFrequency>
							<thresholds>
								<li>
									<terrain>MossyTerrain</terrain>
									<min>0.0</min>
									<max>0.64</max>
								</li>
								<li>
									<terrain>Marsh</terrain>
									<min>0.64</min>
									<max>0.88</max>
								</li>
								<li>
									<terrain>WaterShallow</terrain>
									<min>0.88</min>
									<max>0.98</max>
								</li>
								<li>
									<terrain>WaterDeep</terrain>
									<min>0.98</min>
									<max>999</max>
								</li>
							</thresholds>
						</li>
					</terrainPatchMakers>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Minify cryptosleep caskets</label>
        <tooltip>Does funny (safe) things if a pawn is inside.</tooltip>
        <id>BL_RebalanceMinifyCryptosleepCaskets</id>
        <category>BL_RebalanceCoreCheats</category>
        <operations>
            <li Class="PatchOperationInsert">
                <xpath>//ThingDef[defName="CryptosleepCasket"]/statBases</xpath>
                <value>
                    <minifiedDef>MinifiedThing</minifiedDef>
                    <thingCategories>
                        <li>BuildingsMisc</li>
                    </thingCategories>
                </value>
            </li>
            <li Class="PatchOperationInsert">
                <xpath>//ThingDef[defName="CryptosleepCasket"]/statBases/Flammability</xpath>
                <value>
                    <Mass>75</Mass>
                </value>
            </li>
            <li Class="PatchOperationInsert">
                <xpath>//ThingDef[defName="AncientCryptosleepCasket"]/statBases</xpath>
                <value>
                    <minifiedDef>MinifiedThing</minifiedDef>
                    <thingCategories>
                        <li>BuildingsMisc</li>
                    </thingCategories>
                </value>
            </li>
            <li Class="PatchOperationInsert">
                <xpath>//ThingDef[defName="AncientCryptosleepCasket"]/statBases/Flammability</xpath>
                <value>
                    <Mass>75</Mass>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Rename healroot to xerigium</label>
        <id>BL_RebalanceRenameHealroot</id>
        <category>BL_RebalanceCoreRenamers</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="Plant_Healroot"]/label/text()</xpath>
                <value>Xerigium</value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="Plant_HealrootWild"]/label/text()</xpath>
                <value>Wild Xerigium</value>
            </li>
        </operations>
    </Operation>
</Patch>
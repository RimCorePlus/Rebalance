<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>false</enabled>
		<label>Enemies do not flee</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//FactionDef[(naturalEnemy="true" or permanentEnemy="true") and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
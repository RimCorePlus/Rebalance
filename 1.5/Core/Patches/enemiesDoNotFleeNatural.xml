<Patch>
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>false</defaultValue>
		<label>Enemies do not flee</label>
		<id>BL_RebalanceEnemiesDoNotFleeNatural</id>
		<category>BL_RebalanceCoreRaids</category>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//FactionDef[(naturalEnemy="true" or permanentEnemy="true) and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
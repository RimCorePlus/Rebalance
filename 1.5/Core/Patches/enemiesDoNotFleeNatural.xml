<Patch>
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>false</defaultValue>
		<label>Natural enemies do not flee</label>
		<tooltip>Rough factions.</tooltip>
		<id>BL_RebalanceEnemiesDoNotFleeNatural</id>
		<category>BL_RebalanceCoreRaids</category>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//FactionDef[naturalEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
        <id>BL_RebalanceRenameAdvComponents</id>
        <category>BL_RebalanceCoreRenamers</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="ComponentSpacer"]/label/text()</xpath>

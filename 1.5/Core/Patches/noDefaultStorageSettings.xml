<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>No default storage settings for buildings</label>
        <id>BL_RebalanceNoDefaultStorageSettings</id>
        <category>BL_RebalanceCoreAdjustments</category>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[not(comps/li[@Class="PipeSystem.CompProperties_ConvertResourceToThing"])]/building/defaultStorageSettings</xpath>
                <value>
                    <defaultStorageSettings>
                        <priority>Normal</priority>
                        <filter>
                            <categories />
                        </filter>
                    </defaultStorageSettings>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Filth vanishes with rain and time</label>
        <tooltip>Excludes a special Anomaly filth.</tooltip>
        <id>BL_RebalanceFilthDisappearsRain</id>
        <category>BL_RebalanceCoreAdjustments</category>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[not(@Name="BaseFilth")]/filth[not(rainWashes)]</xpath>
                <value>
                    <rainWashes>true</rainWashes>
                </value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[number(substring-before(filth/disappearsInDays,"~"))>=15]/filth/disappearsInDays/text()</xpath>
                <value>10~15</value>
            </li>
        </operations>
    </Operation>
</Patch>
<Patch>
	<Operation Class="ModSettingsFramework.PatchOperationModOption">
		<defaultValue>false</defaultValue>
		<label>No electrical breakdowns</label>
		<tooltip>Completely removes CompProperties_Breakdownable from all buildings loaded before this mod.</tooltip>
		<id>BL_RebalanceNoBreakdowns</id>
		<category>BL_RebalanceCoreCheats</category>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>//ThingDef/comps/li[@Class="CompProperties_Breakdownable"]</xpath>
			</li>
		</operations>
	</Operation>
</Patch>
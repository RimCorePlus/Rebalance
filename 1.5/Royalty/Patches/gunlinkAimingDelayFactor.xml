<Patch>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>false</enabled>
        <label>Increase aiming speed with gunlink</label>
        <operations>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[defName="Apparel_Gunlink"]/equippedStatOffsets</xpath>
                <value>
                    <AimingDelayFactor>-0.1</AimingDelayFactor>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
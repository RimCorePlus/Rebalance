<Patch>
    <Operation Class="ModSettingsFramework.PatchOperationModOption">
        <defaultValue>false</defaultValue>
        <label>Remove romance debuff for furskins and piggers</label>
        <id>BL_RebalancePiggerLove</id>
        <category>BL_RebalanceBiotech</category>
        <operations>
            <li Class="PatchOperationRemove">
                <xpath>//GeneDef[defName="Furskin" or defName="Nose_Pig"]/missingGeneRomanceChanceFactor</xpath>
            </li>
        </operations>
    </Operation>
</Patch>
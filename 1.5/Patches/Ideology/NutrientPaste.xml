<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>allowNutrientPaste</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<!--Allow Nutrient Paste to be eaten with any meme except Flesh Purity, Rancher, and Cannibal-->
			<Operation Class="PatchOperationConditional">
				<xpath>Defs/PreceptDef[defName="AM_NutrientPasteEating_Indifferent"]</xpath>
				<nomatch Class="PatchOperationRemove">
					<xpath>Defs/PreceptDef[defName="NutrientPasteEating_DontMind"]/requiredMemes</xpath>
				</nomatch>
			</Operation>
			<Operation Class="PatchOperationConditional">
				<xpath>Defs/PreceptDef[defName="AM_NutrientPasteEating_Indifferent"]</xpath>
				<nomatch Class="PatchOperationAdd">
					<xpath>Defs/MemeDef[defName="FleshPurity" or defName="Rancher" or defName="Cannibal"]/requireOne</xpath>
					<value>
						<li>
							<li>NutrientPasteEating_Disgusting</li>
						</li>
					</value>
				</nomatch>
				<match Class="PatchOperationAdd">
					<xpath>Defs/MemeDef[defName="FleshPurity" or defName="Rancher" or defName="Cannibal"]/requireOne</xpath>
					<value>
						<li>
							<li>NutrientPasteEating_Disgusting</li>
						</li>
					</value>
				</match>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
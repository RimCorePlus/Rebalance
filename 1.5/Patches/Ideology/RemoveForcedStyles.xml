<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>removeStyles</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<!--remove styles from memes-->
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/MemeDef/thingStyleCategories</xpath>
				<value>
					<thingStyleCategories>
					</thingStyleCategories>
				</value>
			</Operation>
			<!--remove styles from cultures-->
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/CultureDef/thingStyleCategories</xpath>
				<value>
					<thingStyleCategories>
					</thingStyleCategories>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
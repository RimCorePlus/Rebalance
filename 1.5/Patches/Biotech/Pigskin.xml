<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>removePigskin</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/XenotypeDef/doubleXenotypeChances/Pigskin</xpath>
			</Operation>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/FactionDef/xenotypeSet/xenotypeChances/Pigskin</xpath>
			</Operation>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/XenotypeDef[defName="Pigskin"]</xpath>
				<value>
					<factionlessGenerationWeight>0</factionlessGenerationWeight>
				</value>
			</Operation>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/FactionDef[defName="OutlanderRoughPig"]</xpath>
			</Operation>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/RulePackDef[defName="NamerFactionOutlanderPig" or
				defName="NamerSettlementOutlanderPig"]</xpath>
			</Operation>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/PawnKindDef[defName="Villager_Pig" or defName="Villager_Child_Pig" or defName="Town_Guard_Pig" or defName="Town_Councilman_Pig" or defName="Town_Trader_Pig" or defName="Mercenary_Gunner_Pig" or defName="Mercenary_Elite_Pig"]</xpath>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
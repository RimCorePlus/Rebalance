<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>removeGenie</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/FactionDef/xenotypeSet/xenotypeChances/Genie</xpath>
			</Operation>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/PawnKindDef/xenotypeSet/xenotypeChances/Genie</xpath>
			</Operation>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/XenotypeDef[defName="Genie"]</xpath>
				<value>
					<factionlessGenerationWeight>0</factionlessGenerationWeight>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
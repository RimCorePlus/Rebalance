<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>reworkMechanitor</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<!--chain shotgun and heavy smg-->
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Mechanitor"]/weaponTags</xpath>
				<value>
					<weaponTags>
						<li>IndustrialGunAdvanced</li>
					</weaponTags>
				</value>
			</Operation>
			<!--accommodate new weapons-->
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Mechanitor"]/weaponMoney</xpath>
				<value>
					<weaponMoney>500~900</weaponMoney>
				</value>
			</Operation>
			<!--crafting required-->
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/PawnKindDef[defName="Mechanitor"]/requiredWorkTags</xpath>
				<value>
					<li>Crafting</li>
				</value>
			</Operation>
			<!--remove recluse-->
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/PawnKindDef[defName="Mechanitor"]/forcedTraits/Recluse</xpath>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
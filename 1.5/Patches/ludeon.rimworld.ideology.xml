<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Ideology</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!--Disable preferred apparel when ideologions are generated-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/MemeDef/selectOneOrNone/noneChance</xpath>
					<value>
						<noneChance>1</noneChance>
					</value>
				</li>
				<!--Reduce Biosculpter times-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BiosculpterPod"]/comps/li[@Class="CompProperties_BiosculpterPod_AgeReversalCycle"]/durationDays</xpath>
					<value>
						<durationDays>5</durationDays>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BiosculpterPod"]/comps/li[compClass="CompBiosculpterPod_RegenerationCycle"]/durationDays</xpath>
					<value>
						<durationDays>10</durationDays>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BiosculpterPod"]/comps/li[compClass="CompBiosculpterPod_MedicCycle"]/durationDays</xpath>
					<value>
						<durationDays>2</durationDays>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="BiosculpterPod"]/comps/li[@Class="CompProperties_BiosculpterPod_PleasureCycle"]/durationDays</xpath>
					<value>
						<durationDays>2</durationDays>
					</value>
				</li>
				<!--Reduce Neural Supercharger charge time: 24 hours -> 8 hours-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="NeuralSupercharger"]/comps/li[@Class="CompProperties_NeuralSupercharger"]/ticksToRecharge</xpath>
					<value>
						<ticksToRecharge>20000</ticksToRecharge>
					</value>
				</li>
				<!--Remove tribal faction requirement for Headdress and War Mask-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="Apparel_TribalHeaddress" or
					defName="Apparel_WarMask"]/apparel/ideoDesireAllowedFactionCategoryTags</xpath>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
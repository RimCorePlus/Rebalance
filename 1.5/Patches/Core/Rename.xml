<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RenameComponent</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ComponentIndustrial"]/label</xpath>
				<value>
					<label>industrial component</label>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RenameSpacerComponent</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="ComponentSpacer"]/label</xpath>
				<value>
					<label>spacer component</label>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RenameHealroot</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Plant_Healroot"]/label</xpath>
				<value>
					<label>Xerigium</label>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Plant_HealrootWild"]/label</xpath>
				<value>
					<label>Wild Xerigium</label>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RenameMegasloth</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Megasloth"]/label</xpath>
				<value>
					<label>megatherium</label>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="WoolMegasloth"]/label</xpath>
				<value>
					<label>megatherium wool</label>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="WoolMegasloth"]/description</xpath>
				<value>
					<description>While somewhat coarse, megatherium wool's long fibers make it very strong. It is exceptionally warm.</description>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Megasloth"]/description</xpath>
				<value>
					<description>A giant, solitary herbivore with two giant claws for warding off threats. Long extinct after being wiped out by the natives of Earth's American continent, the megatherium was later brought back using advanced cloning and artificial gestators. Its thick hide is exceptionally strong and insulating, and makes a great leather for cold-weather clothing. It is peaceful if left alone, but will shred anyone who disturbs it with its giant claws.</description>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/PawnKindDef[defName="Megasloth"]/label</xpath>
				<value>
					<label>megatherium</label>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
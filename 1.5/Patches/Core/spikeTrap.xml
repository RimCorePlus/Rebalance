<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>reduce spike trap cost</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="TrapSpike"]/costStuffCount/text()</xpath>
				<value>15</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>reduce work to build spike traps</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="TrapSpike"]/statBases/WorkToBuild/text()</xpath>
				<value>2400</value>
			</li>
		</operations>
	</Operation>
</Patch>
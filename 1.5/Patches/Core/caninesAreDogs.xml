<Patch>
    <Operation Class="VFECore.PatchOperationToggableSequence">
        <enabled>false</enabled>
        <label>Wild canines are dogs</label>
        <operations>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/statBases/FilthRate/text()</xpath>
                <value>1</value>
            </li>
            <li Class="PatchOperationReplace">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/race/petness/text()</xpath>
                <value>1</value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>//ThingDef[@Name="ThingBaseWolf" or defName="Warg"]/race</xpath>
                <value>
                    <nuzzleMtbHours>12</nuzzleMtbHours>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
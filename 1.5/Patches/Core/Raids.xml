<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>NaturalEnemyFlee</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/FactionDef[naturalEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>PermanentEnemyFlee</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/FactionDef[permanentEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RemoveBreach</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[@Name="BreachingBase"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(2000, 0)</li>
					</points>
				</value>
			</Operation>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[@Name="BreachingBase"]/selectionWeightCurvesPerFaction</xpath>
				<value>
					<selectionWeightCurvesPerFaction>
						<li>
							<faction>Mechanoid</faction>
							<selectionWeightPerPointsCurve>
								<points>
									<li>(700, 0)</li>
									<li>(1000, 0)</li>
								</points>
							</selectionWeightPerPointsCurve>
						</li>
					</selectionWeightCurvesPerFaction>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RemoveDropPodRaid</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationRemove">
				<xpath>Defs/RaidStrategyDef/arriveModes/li[text()="EdgeDrop" or text()="CenterDrop" or text()="RandomDrop" or text()="EdgeDropGroups"]</xpath>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RemoveSapper</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[defName="ImmediateAttackSappers"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(1000, 0)</li>
					</points>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>RemoveSeige</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[defName="Siege"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(1000, 0)</li>
					</points>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
</Patch>
<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>Allow corn in hydroponics basin</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//ThingDef[defName="Plant_Corn"]/plant/sowTags</xpath>
				<value>
					<li>Hydroponic</li>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>Allow devilstrand in hydroponics basin</label>

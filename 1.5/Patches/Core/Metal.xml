<Patch>
	<Operation Class="XmlExtensions.OptionalPatch">
		<modId>friedrice</modId>
		<key>MetalFlammable</key>
		<defaultValue>true</defaultValue>
		<caseTrue>
			<!--Metal flammability-->
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Gold" or defName="Plasteel" or defName="Silver" or defName="Steel"]/stuffProps/statFactors/Flammability</xpath>
				<value>
					<Flammability>0.0</Flammability>
				</value>
			</Operation>
		</caseTrue>
	</Operation>
	<Operation Class="XmlExtensions.UseSetting">
		<modId>friedrice</modId>
		<key>GoldSilverBeauty</key>
		<defaultValue>4</defaultValue>
		<apply>
			<Operation Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="Gold" or defName="Silver"]/statBases</xpath>
				<value>
					<Beauty>{GoldSilverBeauty}</Beauty>
				</value>
			</Operation>
		</apply>
	</Operation>
	<Operation Class="XmlExtensions.UseSetting">
		<modId>friedrice</modId>
		<key>SteelDurability</key>
		<defaultValue>2</defaultValue>
		<apply>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Steel"]/stuffProps/statFactors/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>{SteelDurability}</MaxHitPoints>
				</value>
			</Operation>
		</apply>
	</Operation>
	<Operation Class="XmlExtensions.UseSetting">
		<modId>friedrice</modId>
		<key>UraniumDurability</key>
		<defaultValue>2.6</defaultValue>
		<apply>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Uranium"]/stuffProps/statFactors/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>{UraniumDurability}</MaxHitPoints>
				</value>
			</Operation>
		</apply>
	</Operation>
	<Operation Class="XmlExtensions.UseSetting">
		<modId>friedrice</modId>
		<key>PlasteelDurability</key>
		<defaultValue>3</defaultValue>
		<apply>
			<Operation Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Plasteel"]/stuffProps/statFactors/MaxHitPoints</xpath>
				<value>
					<MaxHitPoints>{PlasteelDurability}</MaxHitPoints>
				</value>
			</Operation>
		</apply>
	</Operation>
</Patch>
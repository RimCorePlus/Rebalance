<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Races Expanded - Phytokin</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			<!--remove aptitudes-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/XenotypeDef[defName="VRE_Animakin"
                    or defName="VRE_Gauranlenkin"
                    or defName="VRE_Poluxkin"]/genes/li[text()="AptitudeTerrible_Melee"
					or text()="AptitudeTerrible_Shooting"
					or text()="AptitudeTerrible_Construction"
					or text()="AptitudeRemarkable_Plants"]</xpath>
				</li>
            <!--compensate for metabolism-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/GeneDef[defName="VRE_Photosynthesis"]/biostatMet</xpath>
                    <value>
                        <biostatMet>3</biostatMet>
                    </value>
				</li>
            <!--vanilla head-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/GeneDef[defName="VRE_BarkSkin"]/forcedHeadTypes</xpath>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
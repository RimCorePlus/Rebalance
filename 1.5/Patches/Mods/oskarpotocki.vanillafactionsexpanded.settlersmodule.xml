<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Settlers</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			<!--aggressively removes most weapons and apparel-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[starts-with(defName, "VFES_")
					and not(defName="VFES_Gun_HuntingRifle")
					and not(defName="VFES_Headgear_Bandana")
					and not(defName="VFES_Headgear_Sombrero")
					and not(defName="VFES_Headgear_FlatCap")]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="VFES_Headgear_Bandana"
                    or defName="VFES_Headgear_Sombrero"
                    or defName="VFES_Headgear_FlatCap"]/apparel/tags/li[text()="Outlander"]</xpath>
				</li>
			<!--removes the scenario-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ScenarioDef[defName="VFES_Bandits"]</xpath>
				</li>
			<!--removes thing bloat-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="ChemBoiler"
                    or defName="Chemlamp"
                    or defName="ChemlampPost"
                    or defName="DoorSaloon"
                    or defName="Post"
                    or defName="StoolBar"
                    or defName="TableCircular"
                    or defName="Windmill"]</xpath>
				</li>
            <!--thanks but I don't need three factions-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/FactionDef[@Name="SettlerFactionBase"]/requiredCountAtGameStart</xpath>
                    <value>
                        <requiredCountAtGameStart>0</requiredCountAtGameStart>
                    </value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/FactionDef[defName="SettlerSavage"]</xpath>
                    <value>
                        <requiredCountAtGameStart>1</requiredCountAtGameStart>
                    </value>
				</li>
            <!--remove impids-->
				<li Class="PatchOperationRemove">
					<xpath>Defs/FactionDef[starts-with(defName, "Settler")]/xenotypeSet/xenotypeChances/Impid</xpath>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
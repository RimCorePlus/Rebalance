<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>make boreal forests less marshy</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/BiomeDef[defName="BorealForest"]/terrainPatchMakers</xpath>
				<value>
					<terrainPatchMakers>
						<li>
							<perlinFrequency>0.015</perlinFrequency>
							<thresholds>
								<li>
									<terrain>MossyTerrain</terrain>
									<min>0.0</min>
									<max>0.64</max>
								</li>
								<li>
									<terrain>Marsh</terrain>
									<min>0.64</min>
									<max>0.88</max>
								</li>
								<li>
									<terrain>WaterShallow</terrain>
									<min>0.88</min>
									<max>0.98</max>
								</li>
								<li>
									<terrain>WaterDeep</terrain>
									<min>0.98</min>
									<max>999</max>
								</li>
							</thresholds>
						</li>
					</terrainPatchMakers>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>remove compacted machinery</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="MineableComponentsIndustrial"]/building/mineableScatterCommonality</xpath>
				<value>
					<mineableScatterCommonality>0</mineableScatterCommonality>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>Defs/GenStepDef/genStep/mineables/li[text()="MineableComponentsIndustrial"]</xpath>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>remove compacted plasteel</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="MineablePlasteel"]/building/mineableScatterCommonality</xpath>
				<value>
					<mineableScatterCommonality>0</mineableScatterCommonality>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Plasteel"]/deepCommonality</xpath>
				<value>
					<deepCommonality />
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[defName="Plasteel"]/deepLumpSizeRange</xpath>
				<value>
					<deepLumpSizeRange />
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>Defs/GenStepDef/genStep/mineables/li[text()="MineablePlasteel"]</xpath>
			</li>
		</operations>
	</Operation>
</Patch>
<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>natural enemies do not flee</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/FactionDef[naturalEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>permanent enemies do not flee</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/FactionDef[permanentEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>no breacher raids</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[@Name="BreachingBase"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(2000, 0)</li>
					</points>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[@Name="BreachingBase"]/selectionWeightCurvesPerFaction</xpath>
				<value>
					<selectionWeightCurvesPerFaction>
						<li>
							<faction>Mechanoid</faction>
							<selectionWeightPerPointsCurve>
								<points>
									<li>(700, 0)</li>
									<li>(1000, 0)</li>
								</points>
							</selectionWeightPerPointsCurve>
						</li>
					</selectionWeightCurvesPerFaction>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>no drop pod raids</label>
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>Defs/RaidStrategyDef/arriveModes/li[text()="EdgeDrop" or text()="CenterDrop" or text()="RandomDrop" or text()="EdgeDropGroups"]</xpath>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>no sapper raids</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[defName="ImmediateAttackSappers"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(1000, 0)</li>
					</points>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>True</enabled>
		<label>no siege raids</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/RaidStrategyDef[defName="Siege"]/selectionWeightPerPointsCurve/points</xpath>
				<value>
					<points>
						<li>(700, 0)</li>
						<li>(1000, 0)</li>
					</points>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
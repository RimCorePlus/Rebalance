<Patch>
    <Operation Class="VEF.PatchOperationToggableSequence">
        <enabled>false</enabled>
        <label>[Core] Permanent enemies do not flee</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//FactionDef[permanentEnemy="true" and not(autoFlee="false")]</xpath>
				<value>
					<autoFlee>false</autoFlee>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>